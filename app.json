{
  "expo": {
    "name": "AparApps",
    "slug": "AparApps",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/kpc-logo.png",
    "scheme": "aparapps",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to access your camera",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone"
      }
    },

    "android": {
      "package": "com.satriapams.AparApps",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "resize",
      "edgeToEdgeEnabled": true,
      "permissions": ["android.permission.CAMERA"]
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      [
        "expo-build-properties",
        {
          "android": { "usesCleartextTraffic": true }
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],

    "experiments": { "typedRoutes": true },

    "extra": {
      "router": {},
      "eas": { "projectId": "d6ec4cc9-fe1e-45b4-a0df-27e7e0a2b364" },

      "EXPO_PUBLIC_API_URL": "http://172.16.34.189:3000",

      "devApiUrl": "http://localhost:3000",
      "stagApiUrl": "http://172.16.34.189:3000",
      "localApiUrl": "http://192.168.1.3:3000"
    }
  }
}
